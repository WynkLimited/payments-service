<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="30 seconds">
    <springProperty name="APP_NAME" source="logging.appName"/>
    <springProperty name="ACTIVE_PROFILE" source="logging.profile"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                <Pattern>%level %date [%thread] [%X{rid}] [%file:%line] %msg%n</Pattern>
            </pattern>
        </layout>
    </appender>

    <appender name="ERRORLOG" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder class="in.wynk.logging.encoder.StandardEventEncoder">
            <layout class="in.wynk.logging.layout.ErrorLayout">
                <product>wcf</product>
                <appName>${APP_NAME}</appName>
                <profile>${ACTIVE_PROFILE}</profile>
            </layout>
        </encoder>
    </appender>

    <appender name="APPLOG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="in.wynk.logging.encoder.StandardEventEncoder">
            <layout class="in.wynk.logging.layout.AppLayout">
                <product>wcf</product>
                <appName>${APP_NAME}</appName>
                <profile>${ACTIVE_PROFILE}</profile>
            </layout>
        </encoder>
    </appender>

    <appender name="LOGSTASHLOG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="in.wynk.logging.encoder.StandardEventEncoder">
            <layout class="in.wynk.logging.layout.LogstashLayout">
                <product>wcf</product>
                <appName>${APP_NAME}</appName>
                <profile>${ACTIVE_PROFILE}</profile>
            </layout>
        </encoder>
    </appender>

    <appender name="ASYNC_ERRORLOG"
              class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERRORLOG"/>
        <queueSize>10000</queueSize>
        <neverBlock>true</neverBlock>
        <includeCallerData>true</includeCallerData>
    </appender>

    <appender name="ASYNC_APPLOG"
              class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="APPLOG"/>
        <queueSize>10000</queueSize>
        <neverBlock>true</neverBlock>
        <includeCallerData>true</includeCallerData>
    </appender>

    <appender name="ASYNC_ANALYTIC_LOG"
              class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOGSTASHLOG"/>
        <queueSize>10000</queueSize>
        <neverBlock>true</neverBlock>
        <includeCallerData>true</includeCallerData>
    </appender>

